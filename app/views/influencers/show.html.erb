<div id="Origin">
  <header id="Show_Header">
    <section id="Show_Header__Background">
      <h1>
        <%= link_to "Multi-0-Design", root_path %>
      </h1>

      <p id="Show_Header__Background__Image">
        <%= image_tag @influencer.YoutubeChannel.header %>
      </p>
    </section>
  </header>

  <section class="Influencer_Title">
    <%= image_tag @influencer.YoutubeChannel.icon, class: 'Influencer_Title--Image' %>
    <h2><%= @influencer.name %></h2>

    <div class="Influencer_Title__SNS">
      <%= link_to "https://www.youtube.com/channel/#{@influencer.YoutubeChannel.channel_id}", target: :_blank do %>
        <i class="fab fa-youtube YouTube_Icon-Color"></i>
      <% end %>
    </div>
  </section>
</div>










